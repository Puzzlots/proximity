{
  "formatVersion": 3,
  "display-name": "${mod_name}",
  "id": "${mod_id}",
  "version": "${mod_version}",
  "description": "${mod_desc}.",
  "authors": [
    "Zombii",
    "Lemon",
    "CrabKing",
    "Replet"
  ],
  "meta": {
    "icon": "${mod_id}:icons/icon.png"
  },
  "entrypoints": {
    "init": [
      "io.github.Puzzlots.Proximity.Proximity"
    ],
    "client-init": [
      "io.github.Puzzlots.Proximity.ClientInitializer"
    ]
  },
  "depends": {
    "cosmic-reach": ">=${cosmic_reach_minimum}",
    "puzzle-loader-cosmic": ">=${puzzle_loader_cosmic}",
    "puzzle-loader-core": ">=${puzzle_loader_core}"
  },
  "mixins": [
    "mixins/${mod_id}.common.mixins.json",
    {
      "config": "mixins/${mod_id}.client.mixins.json",
      "environment": "client"
    },
    {
      "config": "mixins/proximity.server.mixins.json",
      "environment": "server"
    }
  ],
  "access-writers": [
    "${mod_id}.manipulator"
  ]
}
